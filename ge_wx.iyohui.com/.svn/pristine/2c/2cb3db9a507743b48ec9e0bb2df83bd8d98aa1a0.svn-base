body {
	padding:0;
	margin:0;	
}
#pagewrap {
	margin:15px auto; 
	width:95%;
	padding-top:5px;
	padding-bottom:5px;
	border:1px solid #dddddd;
	-webkit-border-radius:6px; 
	-moz-border-radius:6px; 
	border-radius:6px;
}
.content {
	margin:15px;	
}
.title_text {
	color:#356db5;
	font: normal 1em/100% "宋体";
	margin:0;
	line-height:22px;
}
.follow_wx {
	color:#356db5;
	font: bold 1.5em/120% "宋体";
	margin-top:15px;
	margin-bottom:15px;	
}
.time_notice {
	color:#356db5;
	font: bold 1.5em/120% "宋体";
	margin-top:22px;	
}
.strong_text {
	color:#356db5;
	font: bold 1.5em/120% "宋体";
	margin:0;
}
.title_bo {
	margin-top:10px;	
	margin-bottom:5px;
	color:#356db5;
	font: normal 1em/100% "宋体";
	line-height:22px;
}
.normal_text {
	color:#898989;
	font: normal 1em/120% "宋体";
	margin:0;
	line-height:22px;
}
.tip_title {
	color:#356db5;
	font: bold 1.5em/120% "宋体";
	margin-top:20px;
}
.step_text {
	margin-top:10px;	
	margin-bottom:15px;
	color:#898989;
	font: normal 1em/120% "宋体";
	line-height:22px;
}
.step_img {
	margin-bottom:20px;
}
.step_img img {
	border:none;
	height:auto;
	max-width:100%;
}
.tip_tag {
	color:#898989;
	font: normal 1em/120% "宋体";
	margin-bottom:22px;
	line-height:22px;
}
.declare_title {
	color:#356db5;
	font: bold 1.5em/120% "宋体";
	margin-bottom:5px;
}
.declare_content {
	color:#356db5;
	font: normal 1em/100% "宋体";
	line-height:25px;	
}