@charset "utf-8";
/* CSS Document */
body{
	
	font-family:"GE汉仪中圆简";
	font-size: 62.5%;
}
*{
    margin:0px;
	padding:0px;
	border:0px;
	}
	#pagewrap{
		width:100%;
		height:auto;
	}
   #page{
	   width:93%;
	   margin:0 auto;
    }
   #top{
        width:100%;
		height:auto;
		color:#0957A7;
		font-size:2.4em;
		text-align:left;
		margin-top:0.3em;
	}
   #rule{
	  width:100%;
	  height:auto;
	  width:100%;
	  margin-top:1em;
    }
   #title_text{
     color:#0957A7;
     font-size:2em;
     text-align:left;
   }
   .normal_text{
   	 color: #000000;
   	 font-size:18px;
   	 line-height:1.8em;
   	 margin-bottom:0.5em;
   	}
   #way{
   	width:100%;
   	border:1px solid #E8E7E8;
   	border-radius:0.5em;
   -moz-border-radius:0.5em;
    min-height: 300px;
    margin: 0 auto;
    margin-top:1em;
    margin-bottom:1em;
   }
  #way_title{
     width: 98%;
     display: inline-block;
     margin:0px auto;
  	 color: #0957A7;
     font-size:1.4em;
     margin-top:1em;
     margin-left:1em;
   }
  .mode{
    width: 43%;
    margin-top: 3em;
    margin-left: 1.5em;
    float: left;
  }
  .way_one{
   color:#6791C7;
   text-align: left;
   font-size:1.7em;
  }
  .way_one_content{

   color:#7F7F7F;
   font-size:1.5em;
   float: left;
   line-height:1.5em;
  }
  .way_one_content a{
  	color:#6FC4E8;
  }
  .way_one_content strong{
  	color:#000000;
  }
  .mode .tu{

   width: 100%;
   background: url(/common/images/1.jpg);

  }
 .two_code{
   width:100%;
   margin-top: 1.5em;
   text-align: center;
   float: left;
 

  }
  .two_code .code{
  	width:50%;
  	display:block;
  	margin: 0 auto;
  }
  .two_code  p{
    color:#7F7F7F;
    font-size:1.6em;
    line-height: 1.6em;

  }
   #result{
   width:100%;
   margin-top:2em;
   min-height:4em;
 }
  #result .result_text{
    color:#0958A8;
    font-size:2em;
    line-height:1.6em;
 }
 .bold_text{
     color: #0958A8;
     font-size:2em;
	 line-height:1.6em;
    }
 
 .border{
	border:1px solid #E8E7E8;
   	border-radius:0.5em;
	-moz-border-radius:0.5em;
	padding:10px;
  }
 
 .footer{
 	width:100%;
 	background-size:100% 100%;
 }


